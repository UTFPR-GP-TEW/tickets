#!/bin/bash

DIR=$(pwd)
[ $(basename $DIR) == 'bin' ] && echo "Don't run in bin" && exit -1  

IMAGE="tickets_tew"
[ "$(docker images | grep "$IMAGE")" == "" ] && docker build -t $IMAGE .

if [ "$1" == "" ] ; then 
  docker run -itP -p 3000:3000 -v $DIR:/app $IMAGE
else
  docker run -itP -v $DIR:/app $IMAGE $1
fi

