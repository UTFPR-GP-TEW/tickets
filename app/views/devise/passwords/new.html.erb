<div class="ui stackable three column grid">
  <div class="column five wide"></div>

  <div class="column six wide box">
    <h1 class="ui header">Esqueceu sua senha?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class: 'ui form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="center">
        <div class="actions">
          <%= f.submit "Enviar e-mail com instruções", class: "ui button primary" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>

    <% end %>

  </div>
</div>