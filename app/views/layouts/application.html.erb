<!DOCTYPE html>
<html>
<head>
    <title>Tickets</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>
<header>
    <div class="ui left visible vertical inverted sidebar labeled icon menu">
        <%= link_to '<i class="home icon"></i>Home'.html_safe, root_path, class: 'item' %>
        <a class="item">
            <i class="ticket icon"></i>
            Tickets
        </a>
        <%= link_to '<i class="folder icon"></i>Projetos'.html_safe, projects_path, class: 'item' %>
        <a class="item">
            <i class="user icon"></i>
            Usuários
        </a>
    </div>
    <div class="ui secondary menu black inverted segment">
        <div class="ui container">
            <a class="item">
                <i class="home icon"></i>
                Home
            </a>
            <a class="item">
                <i class="ticket icon"></i>
                Tickets
            </a>
            <a class="item">
                <i class="folder icon"></i>
                Projetos
            </a>

            <%= link_to "<i class='user icon'></i> Criar Usuário".html_safe, new_user_registration_path, :class => 'item' %>

            <div class="right menu">
                <% if user_signed_in? %>
                    
                    <div class="ui item">
                        <small>Conectado como</small> &nbsp;
                        &lt;<%= current_user.email %>&gt;
                    </div>

                    <%= link_to "Editar Perfil", edit_user_registration_path, :class => 'ui item'  %>

                    <%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'ui item'  %>
                <% else %>
                    <%= link_to "Entrar", new_user_session_path, :class => 'ui item'  %>
                <% end %>
            </div>
        </div>
    </div>
</header>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<main>
    <div class="ui container">
        <%= yield %>
    </div>
</main>

<footer class="ui inverted vertical footer segment black">
    <div class="ui three column doubling stackable grid container">
        <div class="column">
            <img src="../../assets/logo.png" alt="" />
        </div>
        <div class="column"></div>
        <div class="column">
            <p>Copyright © 2016 TEW</p>
        </div>
    </div>
</footer>
</body>
</html>
