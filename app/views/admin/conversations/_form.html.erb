<%= form_for [:admin, @conversation] , remote: true, html: {class: "ui form"} do |f| %>
  <%= f.hidden_field :ticket_id, :value => @ticket.nil? ? @conversation.ticket.id : @ticket.id %>
  <% if @conversation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conversation.errors.count, "error") %> prohibited this conversation from being saved:</h2>

      <ul>
      <% @conversation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 2 %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar",class: "ui secondary button" %>
  </div>
<% end %>